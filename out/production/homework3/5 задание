public class Main {
    public static void main(String[] args) {
byte total = 120;
var colorant = 2+4;
var ammountOfClasses = total/colorant;
var whiteColorant = 2*ammountOfClasses;
var brownColorant = 4*ammountOfClasses;
        System.out.println("В школе, где "+ammountOfClasses+" классов, нужно "+whiteColorant+" банок белой краски и "+brownColorant+" банок коричневой краски");
    }
}