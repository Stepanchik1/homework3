public class Main {
    public static void main(String[] args) {
       int w = 7;
       int t1 = 7*1000/250;
       int t2 = 7*1000/500;
       int cp_ap = (t1+t2)/2;
        System.out.println("Спортсмену понадобится "+t1+" дней при похудении на 250 г в день,");
        System.out.println("Спортсмену понадобится "+t2+" дней при похудении на 500 г в день,");
        System.out.println("а в среднем понадобится "+cp_ap+" день.");
    }
}